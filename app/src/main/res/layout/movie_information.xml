<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/movie_information_title"
        android:layout_width="322dp"
        android:layout_height="61dp"
        android:fontFamily="sans-serif-medium"
        android:text="Title goes here"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

    <TextView
        android:id="@+id/movie_information_release_date"
        android:layout_width="103dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:text="Release date goes here"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/movie_information_runtime"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_information_genre" />

    <TextView
        android:id="@+id/movie_information_language"
        android:layout_width="101dp"
        android:layout_height="22dp"
        android:layout_marginEnd="48dp"
        android:text="Language goes here"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/movie_information_runtime" />

    <TextView
        android:id="@+id/movie_information_overview"
        android:layout_width="376dp"
        android:layout_height="182dp"
        android:fontFamily="sans-serif-medium"
        android:justificationMode="inter_word"
        android:text="Overview goes here"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_information_language"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="156dp"
        android:layout_height="236dp"
        android:layout_marginTop="28dp"
        android:contentDescription="play_trailer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/play_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="play_trailer"
        android:src="@drawable/baseline_play_circle_24"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
        app:layout_constraintEnd_toEndOf="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="@+id/imageButton2" />

    <TextView
        android:id="@+id/movie_information_runtime"
        android:layout_width="96dp"
        android:layout_height="21dp"
        android:layout_marginEnd="1dp"
        android:text="Runtime goes here"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:layout_constraintEnd_toStartOf="@+id/movie_information_language"
        app:layout_constraintTop_toBottomOf="@+id/movie_information_genre" />

    <TextView
        android:id="@+id/movie_information_genre"
        android:layout_width="307dp"
        android:layout_height="22dp"
        android:text="Genres goes here"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_information_title" />


</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/search_result_title"
        android:layout_width="403dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="sans-serif-medium"
        android:text="Title goes here"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="141dp"
        android:layout_height="216dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:layout_marginTop="56dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="0"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:stepSize="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/search_result_genres"
        android:layout_width="265dp"
        android:layout_height="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Geners goes here"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <TextView
        android:id="@+id/search_result_language"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginEnd="48dp"
        android:fontFamily="sans-serif-light"
        android:text="Language goes here"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_result_genres" />

    <TextView
        android:id="@+id/search_result_release_date"
        android:layout_width="105dp"
        android:layout_height="22dp"
        android:layout_marginStart="48dp"
        android:fontFamily="sans-serif-light"
        android:text="Runtime goes here"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/search_result_runtime"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_result_genres" />

    <TextView
        android:id="@+id/search_result_overview"
        android:layout_width="394dp"
        android:layout_height="226dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="sans-serif-medium"
        android:justificationMode="inter_word"
        android:text="Overview goes here"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_result_runtime" />

    <TextView
        android:id="@+id/search_result_runtime"
        android:layout_width="102dp"
        android:layout_height="21dp"
        android:fontFamily="sans-serif-light"
        android:text="Runtime goes here"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/search_result_language"
        app:layout_constraintTop_toBottomOf="@+id/search_result_genres" />

</androidx.constraintlayout.widget.ConstraintLayout>